<h2>ユーザー</h2>

<div class="main user-show">
  <div class="container">
    <div class="user">
      <% @user.posts.each do |post| %>
        <div>
          id: <%= post.id %>
          <br>
          year: <%= post.year %>
          <br>
          month: <%= post.month %>
          <br>
          tytle: <%= post.tytle %>
          <br>
          background: <%= post.background %>
          <br>
          do: <%= post.do %>
          <br>
          notice: <%= post.notice %>
          <br>
          user_id: <%= post.user_id %>
          <hr>
          <%= link_to("編集", "/posts/#{post.id}/edit") %>
          <%= link_to("削除", "/posts/#{post.id}/destroy", {method:"post"}) %>
        </div>
      <% end %>
    </div>
  </div>
</div>