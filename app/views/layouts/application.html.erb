<!DOCTYPE html>
<html>
  <head>
    <title>AxisPortfolio</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if @current_user %>
        <header>
          <div class="header-mini">
            <a href="/users/index"><h1>AXIS Portfolio</h1></a>
            <div class="three-link">
              <div class="redhover">
                <%= link_to("MyPage", "/users/#{session[:id]}") %>
              </div>
              <div class="redhover">
                <%= link_to("ユーザ一覧", "/users/index") %>
              </div>
              <div class="redhover">
                <%= link_to("Settings", "/users/setting") %>
              </div>
            </div>  
          </div>  
        </header>
      <% end %>
    </div>

    <%= yield %>

    <% if session[:user_id] %>
      <footer>
        <p>©︎</p>
        <p>2022 関西AXIS</p>
        <a href="/help">Help</a>
      </footer>
    <% end %>
  </body>

</html>
